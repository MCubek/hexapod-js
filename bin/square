#!/usr/bin/env node

if(process.argv.length < 3) {
  console.error('Usage: square [ip]');
  return 1;
}

console.log('Connecting to: ' + process.argv[2]);

var Hexapod = require('../lib/index.js');
var h = new Hexapod(process.argv[2], 80);
//h.connect();

// Make square!
for(var i = 0; i < 4; i++) {
  h.goForward(0.5);
  h.turnRight(90);
}
